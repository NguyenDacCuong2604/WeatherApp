<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.Navigation"
             xmlns:pages="clr-namespace:WeatherApp.Views">
  <FlyoutPage.Flyout>
    <pages:NavigationFlyout x:Name="FlyoutPage"/>
  </FlyoutPage.Flyout>
  <FlyoutPage.Detail>
    <NavigationPage>
      <x:Arguments>
        <pages:CurrentWeatherPage x:Name="currentWeatherPage" />
      </x:Arguments>
    </NavigationPage>
  </FlyoutPage.Detail>
</FlyoutPage>